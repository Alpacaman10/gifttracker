<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Gifts

    <a data-toggle="collapse" href="#user_gifts_new_form">
      Add item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.gifts.each do |item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to item, item %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_gifts_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_gifts_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
