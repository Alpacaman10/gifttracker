<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Relationships

    <a data-toggle="collapse" href="#user_relationships_new_form">
      Add relationship
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.relationships.each do |relationship| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to relationship, relationship %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_relationships_new_form">
        <%= render partial: "users/user_relationships_new_form" %>
      </div>
    </div>

  </ul>
</div>
