<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Relationships

    <a data-toggle="collapse" href="#circle_relationships_new_form">
      Add relationship
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @circle.relationships.each do |relationship| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to relationship, relationship %>

        <%= link_to relationship, method: :delete, data: { confirm: "Do you really want to delete this relationship" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="circle_relationships_new_form">
        <%= render partial: "circles/circle_relationships_new_form" %>
      </div>
    </div>

  </ul>
</div>
