<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Items

    <a data-toggle="collapse" href="#circle_items_new_form">
      Add item
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @circle.items.each do |item| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to item, item %>

        <% if current_user == item.creator %>
          <%= link_to item, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="circle_items_new_form">
        <%= render partial: "circles/circle_items_new_form" %>
      </div>
    </div>

  </ul>
</div>
