<%= form_with(model: @item, local: true) do |f| %>

  <%= f.hidden_field :created_by, value: current_user.id %>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url %>

    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :received, class: "form-check-input" %>
    <%= f.label :received, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= f.label :purchased_by_id %>

    <%= f.collection_select :purchased_by_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :circle_id, value: @relationship.id %>

  <div class="form-group">
    <%= f.label :priority %>

    <%= f.text_field :priority, class: "form-control" %>
  </div>

  <%= f.submit "Create item", class: "btn btn-block btn-outline-secondary" %>
<% end %>
