<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Created by</dt>
      <dd>
        <% if @item.creator.present? %>
          <%= link_to item.creator, item.creator %>
        <% end %>
      </dd>

      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @item.image, class: "img-fluid" %>
      </dd>

      <dt>Url</dt>
      <dd><%= item.url %></dd>

      <dt>Description</dt>
      <dd><%= item.description %></dd>

      <dt>Price</dt>
      <dd><%= item.price %></dd>

      <dt>Received</dt>
      <dd><%= item.received %></dd>

      <dt>Circle</dt>
      <dd>
        <% if @item.circle.present? %>
          <%= link_to item.circle, item.circle %>
        <% end %>
      </dd>

      <dt>Priority</dt>
      <dd><%= item.priority %></dd>

      <dt>Name</dt>
      <dd><%= item.name %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @item.creator %>
          <%= link_to edit_item_url(item), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @item.creator %>
          <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
