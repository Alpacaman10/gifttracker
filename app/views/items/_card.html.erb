<div class="card mb-3">
  <h2 class="card-header h4">
    Item #<%= item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Created by</dt>
      <!-- Display created_by start -->
      <dd><%= item.created_by %></dd>
      <!-- Display created_by end -->

      <dt>Image</dt>
      <!-- Display image start -->
      <dd><%= item.image %></dd>
      <!-- Display image end -->

      <dt>Url</dt>
      <!-- Display url start -->
      <dd><%= item.url %></dd>
      <!-- Display url end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= item.description %></dd>
      <!-- Display description end -->

      <dt>Price</dt>
      <!-- Display price start -->
      <dd><%= item.price %></dd>
      <!-- Display price end -->

      <dt>Received</dt>
      <!-- Display received start -->
      <dd><%= item.received %></dd>
      <!-- Display received end -->

      <dt>Purchased by</dt>
      <!-- Display purchased_by_id start -->
      <dd><%= item.purchased_by_id %></dd>
      <!-- Display purchased_by_id end -->

      <dt>Circle</dt>
      <!-- Display circle_id start -->
      <dd><%= item.circle_id %></dd>
      <!-- Display circle_id end -->

      <dt>Priority</dt>
      <!-- Display priority start -->
      <dd><%= item.priority %></dd>
      <!-- Display priority end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link item start -->
      <div class="col">
        <%= link_to edit_item_url(item), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link item end -->

      <!-- Delete link item start -->
      <div class="col">
        <%= link_to item, method: :delete, data: { confirm: "Do you really want to delete this item?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link item end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(item.updated_at) %> ago
  </div>
</div>
